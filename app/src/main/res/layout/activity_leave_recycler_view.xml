<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_leave_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/employeeLeaveViewRefreshPageButton"
        android:layout_width="181dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="110dp"
        android:layout_marginTop="630dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/login_button"
        android:text="Refresh"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        app:initialCornerAngle="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:spinning_bar_color="#FFF"
        app:spinning_bar_padding="20dp"
        app:spinning_bar_width="4dp" />

    <TextView
        android:id="@+id/employeeLeavesHeadingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="View All Leaves"
        android:textSize="34sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leaveRecyclerView"
        android:layout_width="410dp"
        android:layout_height="487dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/employeeViewLeavesEmptyTextView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="No Items To Display"
        android:textColor="@color/grey"
        android:textSize="24dp"
        android:textStyle="italic"
        android:visibility="gone" />

</RelativeLayout>